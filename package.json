{
  "name": "coding-life",
  "version": "1.0.0",
  "description": "fucking life",
  "packageManager": "pnpm@8.15.3",
  "main": "index.js",
  "scripts": {
    "postinstall": "simple-git-hooks",
    "start": "http-server src -p 2333 -c-1 -o",
    "start:dom": "pnpm --filter=dom-blocking dev",
    "start:jsonp": "pnpm --filter=jsonp dev",
    "start:proxy": "pnpm --filter=reverse-proxy dev",
    "stop:proxy": "pnpm --filter=reverse-proxy stop",
    "start:vue": "pnpm --filter=vue dev",
    "start:cache": "pnpm --filter=http-cache dev",
    "test": "jest ./src",
    "test:coverage": "jest ./src --coverage",
    "test:promise": "promises-aplus-tests src/js/promise/adapter.js",
    "lint": "eslint --cache --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --cache --ignore-path .gitignore .",
    "sync": "node scripts/sync.js"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit $1",
    "pre-push": "pnpm sync"
  },
  "lint-staged": {
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.{js,cjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:justorez/coding-life.git"
  },
  "keywords": [
    "js",
    "vue",
    "css",
    "browser"
  ],
  "author": "justorez",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/jest": "^27.4.1",
    "@types/node": "20",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "http-server": "^14.1.0",
    "jest": "^27.5.1",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "opener": "^1.5.2",
    "prettier": "^3.2.5",
    "promises-aplus-tests": "^2.1.2",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.1",
    "shared": "workspace:*",
    "ws": "^8.15.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
